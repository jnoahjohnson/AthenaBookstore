<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Athena Bookstore</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link href="/lib/font-awesome/css/all.min.css" rel="stylesheet" />
</head>
<body>
    <div class="bg-dark text-white p-2">
        <div class="container-fluid">
            <div class="row">
                <div class="col navbar-brand"><a asp-controller="Home" asp-action="Index" class="text-white">Athena Bookstore</a></div>
                <div class="col-6 text-right d-flex justify-content-end align-items-center">
                    <vc:cart-summary />
                </div>
            </div>
        </div>
    </div>

    <header class="px-5">
        <div class="py-4 px-3 bg-primary text-white rounded mt-2 border-bottom border-info shadow mb-3">
            <h1>Welcome to Athena Bookstore</h1>
            <h2 class="font-weight-light">Checkout our selection of books</h2>
        </div>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            <div class="row">
                <div id="categories" class="col-3">
                    <vc:navigation-menu />
                </div>
                <div class="col-9">
                    @RenderBody()
                </div>
            </div>
        </main>
    </div>

    <footer class="border-top footer text-secondary">
        <div class="container">
            &copy; 2021 - Athena Bookstore
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
